{
    "build": {
      "builder": "NIXPACKS",
      "rootDir": "backend",
      "buildCommand": "npm install --include=dev && npm run build"
    },
    "deploy": {
      "startCommand": "npm start",
      "healthcheckPath": "/",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 3
    }
  }
  